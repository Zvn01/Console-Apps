int berechnungsart = 1;
double result;
double a;
double b;
double h;



try
{
    while (berechnungsart != 0)
    {

        Console.Write("Wert für A angeben: ");
        a = Convert.ToDouble(Console.ReadLine());

        Console.Write("\nWert für B angeben: ");
        b = Convert.ToDouble(Console.ReadLine());
        Console.Clear();

        Console.WriteLine("Fläche des Quadrates berechnen\t\t\t (1)");
        Console.WriteLine("Fläche des Rechtecks berechnen\t\t\t (2)");
        Console.WriteLine("Fläche des Dreiecks berechnen\t\t\t (3)");
        Console.WriteLine("Fläche des Kreises berechnen\t\t\t (4)");
        Console.WriteLine("Fläche des gleichschenkligen Trapez berechnen\t (5)");

        Console.WriteLine("\nZum Beenden (0) eingeben.");

        Console.Write("\nGewünschte Berechnung eingeben (1-5): ");
        berechnungsart = Convert.ToInt32(Console.ReadLine());
        Console.Clear();

        switch (berechnungsart)
        {
            case 0:
                Console.WriteLine("Beende Loop...");
                break;
            case 1:
                Console.WriteLine("Die Fläche des Quadrates mit den Ausgangswerten " + a + " und " + b + " ergibt: " + QuadratBerechnen(a, b));                
                break;

            case 2:
                Console.WriteLine("Die Fläche des Rechtecks mit den Ausgangswerten " + a + " und " + b + " ergibt: " + RechteckBerechnen(a, b));
                break;

            case 3:
                Console.Write("Geben Sie noch einen Wert für H an: ");
                h = Convert.ToDouble(Console.ReadLine());
                Console.WriteLine("Die Fläche des gleichschenkligen Dreiecks mit den Ausgangswerten " + a + " und " + h + " ergibt: " + DreieckBerechnen(a, h));
                break;

            case 4:
                Console.WriteLine("Die Fläche des Kreises mit den Ausgangswerten " + a + " und " + b + " ergibt: " + KreisBerechnen(a));
                break;

            case 5:
                Console.Write("Geben Sie noch einen Wert für H an: ");
                h = Convert.ToDouble(Console.ReadLine());
                Console.WriteLine("Die Fläche des gleichschenkligen Trapezes mit den Ausgangswerten " + a + ", " + b + " und Höhe " + h + " ergibt: " + TrapezBerechnen(a, b, h));
                break;

            default:
                Console.WriteLine("Falsche Eingabe.\n");
                break;  

        }

    }
}
catch (Exception ex)
{
    Console.WriteLine(ex.Message);
}

//statische Methoden
static double QuadratBerechnen(double a, double b)
{
    return a * b;
}
static double RechteckBerechnen(double a, double b)
{
    return a * b;
}
static double DreieckBerechnen(double a, double h)
{
    return (a * h) / 2;
}
static double KreisBerechnen(double a)
{
    return Math.Round((a / 2) * (a / 2) * Math.PI, 2);
}
static double TrapezBerechnen(double a, double b, double h)
{
    return (a + b) * h / 2;
}
